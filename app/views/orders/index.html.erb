<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<form accept-charset="UTF-8" action="orders" method="get">
  <div class="input-group">  
    <%= search_field_tag :search, params[:search], placeholder: "Search city or name", class: "form-control" %>  
    <div class="input-group-btn">  
      <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
    </div>  
  </div>
</form>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>City</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Unit sold</th>
      <th>Unit price</th>
      <th>Total revenue</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.city %></td>
        <td><%= order.first_name %></td>
        <td><%= order.last_name %></td>
        <td><%= order.unit_sold %></td>
        <td><%= order.unit_price %></td>
        <td><%= order.total_revenue %></td>
        <td><%= order.latitude %></td>
        <td><%= order.longitude %></td>
        <td><%= order.product_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
